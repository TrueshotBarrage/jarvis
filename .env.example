# Jarvis Configuration
# Copy this file to .env and fill in your API keys
# DO NOT commit your .env file to git!

# Required: Google Gemini API key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Optional: Todoist API token for task management
# Get from: Todoist Settings → Integrations → Developer
TODOIST_API_TOKEN=your-todoist-token

# Optional: Google Calendar ID (your email for primary calendar)
GOOGLE_CALENDAR_ID=your.email@gmail.com
GOOGLE_CALENDAR_IDs=calendar1@gmail.com,calendar2@gmail.com
CALENDAR_TYPE_OVERRIDES='{"Birthdays": "birthdays", "Food": "social", "My Work Cal": "work"}'

# Optional: Path to Google service account credentials
# GOOGLE_CREDENTIALS_PATH=google_credentials.json

# Optional: Weather location coordinates (default: Central Park, NYC)
# WEATHER_LAT=40.7890
# WEATHER_LON=-73.9670

# Optional: Database path
# DB_PATH=db/jarvis.db
